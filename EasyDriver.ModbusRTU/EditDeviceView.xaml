<UserControl
    x:Class="EasyDriver.ModbusRTU.EditDeviceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:local="clr-namespace:EasyDriver.ModbusRTU"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinWidth="520"
    MaxWidth="520"
    d:DesignHeight="600"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="dxlc:LayoutItem">
            <Setter Property="LabelPosition" Value="Top" />
            <Setter Property="ElementSpace" Value="4" />
            <Setter Property="AddColonToLabel" Value="True" />
            <Setter Property="Foreground" Value="#F1FA88" />
        </Style>
        <Style TargetType="dxlc:LayoutGroup">
            <Setter Property="ItemSpace" Value="8" />
        </Style>
    </UserControl.Resources>
    <dxb:BarManager>

        <dxb:BarManager.Items>
            <dxb:BarButtonItem x:Name="bAddInputContacts" Content="Add block input contacts" />
            <dxb:BarButtonItem x:Name="bAddOutputCoils" Content="Add block output coils" />
            <dxb:BarButtonItem x:Name="bAddInputRegisters" Content="Add block input registers" />
            <dxb:BarButtonItem x:Name="bAddHoldingRegisters" Content="Add block holding registers" />
            <dxb:BarButtonItem x:Name="bRemoveInputContacts" Content=" Remove block input contacts" />
            <dxb:BarButtonItem x:Name="bRemoveOutputCoils" Content=" Remove block output coils" />
            <dxb:BarButtonItem x:Name="bRemoveInputRegisters" Content=" Remove block input registers" />
            <dxb:BarButtonItem x:Name="bRemoveHoldingRegisters" Content=" Remove block holding registers" />
        </dxb:BarManager.Items>
        <dx:BackgroundPanel>
            <dxdo:DockLayoutManager AllowCustomization="False">
                <dxdo:LayoutGroup ItemHeight="Auto" Orientation="Vertical">
                    <dxdo:LayoutGroup ItemHeight="Auto">
                        <dxdo:LayoutGroup
                            Caption="Device Parameters"
                            GroupBorderStyle="Group"
                            ItemHeight="Auto"
                            Orientation="Vertical"
                            ShowCaption="True">
                            <dxdo:LayoutGroup.CaptionTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        FontWeight="Bold"
                                        Foreground="#FF79C6"
                                        Text="{Binding}" />
                                </DataTemplate>
                            </dxdo:LayoutGroup.CaptionTemplate>
                            <dxdo:LayoutControlItem>
                                <dxlc:LayoutControl>
                                    <dxlc:LayoutGroup ItemLabelsAlignment="Local" Orientation="Vertical">
                                        <dxlc:LayoutItem AddColonToLabel="True" Label="Name">
                                            <dxe:TextEdit x:Name="txbName" />
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutGroup>
                                            <dxlc:LayoutItem AddColonToLabel="True" Label="Device Id">
                                                <dxe:SpinEdit
                                                    x:Name="spnDeviceId"
                                                    AllowDefaultButton="False"
                                                    Mask="d"
                                                    MaskUseAsDisplayFormat="True"
                                                    MaxValue="255"
                                                    MinValue="0"
                                                    Value="1" />
                                            </dxlc:LayoutItem>
                                            <dxlc:LayoutItem AddColonToLabel="True" Label="Timeout (ms)">
                                                <dxe:SpinEdit
                                                    x:Name="spnTimeout"
                                                    AllowDefaultButton="False"
                                                    Mask="d"
                                                    MaskUseAsDisplayFormat="True"
                                                    MaxValue="1000000"
                                                    MinValue="10"
                                                    Value="1000" />
                                            </dxlc:LayoutItem>

                                        </dxlc:LayoutGroup>
                                        <dxlc:LayoutGroup>
                                            <dxlc:LayoutItem AddColonToLabel="True" Label="Try Read/Write Before Fail">
                                                <dxe:SpinEdit
                                                    x:Name="spnTryReadWrite"
                                                    AllowDefaultButton="False"
                                                    Mask="d"
                                                    MaskUseAsDisplayFormat="True"
                                                    MaxValue="10"
                                                    MinValue="1"
                                                    Value="3" />
                                            </dxlc:LayoutItem>
                                            <dxlc:LayoutItem AddColonToLabel="True" Label="Byte Order">
                                                <dxe:ComboBoxEdit
                                                    x:Name="cobByteOrder"
                                                    AllowNullInput="False"
                                                    IsTextEditable="False"
                                                    SelectedIndex="0" />
                                            </dxlc:LayoutItem>

                                        </dxlc:LayoutGroup>
                                        <dxlc:LayoutGroup>
                                            <dxlc:LayoutItem AddColonToLabel="True" Label="Description">
                                                <dxe:TextEdit
                                                    x:Name="txbDescription"
                                                    Height="44"
                                                    HorizontalContentAlignment="Left"
                                                    VerticalContentAlignment="Top" />
                                            </dxlc:LayoutItem>
                                        </dxlc:LayoutGroup>
                                    </dxlc:LayoutGroup>
                                </dxlc:LayoutControl>
                            </dxdo:LayoutControlItem>
                        </dxdo:LayoutGroup>
                    </dxdo:LayoutGroup>
                    <dxdo:LayoutGroup
                        Caption="Read Block Settings"
                        GroupBorderStyle="Group"
                        ItemHeight="Auto"
                        Orientation="Vertical"
                        ShowCaption="True">
                        <dxdo:LayoutGroup.CaptionTemplate>
                            <DataTemplate>
                                <TextBlock
                                    FontWeight="Bold"
                                    Foreground="#FF79C6"
                                    Text="{Binding}" />
                            </DataTemplate>
                        </dxdo:LayoutGroup.CaptionTemplate>
                        <dxdo:LayoutGroup BorderThickness="0" GroupBorderStyle="Tabbed">
                            <dxdo:LayoutGroup Caption="Input Contacts">
                                <dxdo:LayoutGroup.CaptionTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            FontWeight="Bold"
                                            Foreground="#FFB86C"
                                            Text="{Binding}" />
                                    </DataTemplate>
                                </dxdo:LayoutGroup.CaptionTemplate>
                                <dxdo:LayoutControlItem>
                                    <local:ReadBlockSettingView x:Name="blockInputContacts" />
                                </dxdo:LayoutControlItem>
                            </dxdo:LayoutGroup>
                            <dxdo:LayoutGroup Caption="Output Coils">
                                <dxdo:LayoutGroup.CaptionTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            FontWeight="Bold"
                                            Foreground="#FFB86C"
                                            Text="{Binding}" />
                                    </DataTemplate>
                                </dxdo:LayoutGroup.CaptionTemplate>
                                <dxdo:LayoutControlItem>
                                    <local:ReadBlockSettingView x:Name="blockOutputCoils" />
                                </dxdo:LayoutControlItem>
                            </dxdo:LayoutGroup>
                            <dxdo:LayoutGroup Caption="Input Registers">
                                <dxdo:LayoutGroup.CaptionTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            FontWeight="Bold"
                                            Foreground="#FFB86C"
                                            Text="{Binding}" />
                                    </DataTemplate>
                                </dxdo:LayoutGroup.CaptionTemplate>
                                <dxdo:LayoutControlItem>
                                    <local:ReadBlockSettingView x:Name="blockInputRegisters" />
                                </dxdo:LayoutControlItem>
                            </dxdo:LayoutGroup>
                            <dxdo:LayoutGroup Caption="Holding Registers">
                                <dxdo:LayoutGroup.CaptionTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            FontWeight="Bold"
                                            Foreground="#FFB86C"
                                            Text="{Binding}" />
                                    </DataTemplate>
                                </dxdo:LayoutGroup.CaptionTemplate>
                                <dxdo:LayoutControlItem>
                                    <local:ReadBlockSettingView x:Name="blockHoldingRegisters" />
                                </dxdo:LayoutControlItem>
                            </dxdo:LayoutGroup>
                        </dxdo:LayoutGroup>
                    </dxdo:LayoutGroup>
                    <dxdo:LayoutGroup
                        Margin="0,4,0,0"
                        HorizontalAlignment="Right"
                        ItemHeight="Auto"
                        Orientation="Horizontal">
                        <dxdo:LayoutControlItem ItemWidth="70">
                            <dx:SimpleButton
                                x:Name="btnOk"
                                Content="Ok"
                                Foreground="#50FA7B" />
                        </dxdo:LayoutControlItem>
                        <dxdo:LayoutControlItem ItemWidth="70">
                            <dx:SimpleButton
                                x:Name="btnCancel"
                                Content="Cancel"
                                Foreground="#FF5555" />
                        </dxdo:LayoutControlItem>
                    </dxdo:LayoutGroup>
                </dxdo:LayoutGroup>

            </dxdo:DockLayoutManager>
        </dx:BackgroundPanel>

    </dxb:BarManager>
</UserControl>
