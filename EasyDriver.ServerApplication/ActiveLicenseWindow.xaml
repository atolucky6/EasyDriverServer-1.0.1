<Window
    x:Class="EasyDriver.ServerApplication.ActiveLicenseWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EasyDriver.ServerApplication"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Active License"
    Width="800"
    Height="220"
    mc:Ignorable="d">
    <StackPanel Margin="16" Orientation="Vertical">
        <Label Content="Computer Id" />
        <TextBox x:Name="txbComputerId" IsReadOnly="True" />

        <Label Margin="0,4,0,0" Content="Serial Key" />
        <TextBox x:Name="txbSerialKey" IsReadOnly="False" />

        <StackPanel
            Margin="0,8,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button x:Name="btnActive" Content="Active" />
            <Button
                x:Name="btnCancel"
                Margin="8,0,0,0"
                Content="Cancel" />
        </StackPanel>
    </StackPanel>
</Window>
