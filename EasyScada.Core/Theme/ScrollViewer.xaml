                                </Path.Fill>
                            </Path>
                            <Rectangle
                                x:Name="Highlight"
                                Margin="1"
                                Fill="Transparent"
                                IsHitTestVisible="false"
                                Opacity="0.6"
                                RadiusX="0.5"
                                RadiusY="0.5"
                                Stroke="#00FFFFFF"
                                StrokeThickness="1" />
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--  ScrollBar RepeatButton  -->
    <Style x:Key="Office2010SilverScrollBarRepeatButtonStyle" TargetType="{x:Type RepeatButton}">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="Focusable" Value="false" />
        <Setter Property="Foreground" Value="#FF042271" />
        <Setter Property="FontFamily" Value="Trebuchet MS" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="BackgroundOver"
                                            Storyboard.TargetProperty="Opacity"
                                            To="1"
                                            Duration="00:00:00.2" />
                                        <DoubleAnimation
                                            Storyboard.TargetName="BackgroundOver_Highlight"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0.65"
                                            Duration="00:00:00.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="BackgroundOver"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0"
                                            Duration="00:00:00.2" />
                                        <DoubleAnimation
                                            Storyboard.TargetName="BackgroundOver_Highlight"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0.0"
                                            Duration="00:00:00.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="DisabledVisualElement"
                                            Storyboard.TargetProperty="Opacity"
                                            To="1"
                                            Duration="0" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="DisabledVisualElement"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0"
                                            Duration="0" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="BackgroundPressed"
                                            Storyboard.TargetProperty="Opacity"
                                            To="1"
                                            Duration="0" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="BackgroundPressed"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0"
                                            Duration="0" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                    <Grid>
                        <Border
                            x:Name="BackgroundNorm"
                            Background="{StaticResource Office2010SilverScrollBarRepeatButtonNormalBrush}"
                            BorderBrush="{StaticResource Office2010SilverScrollBarRepeatButtonNormalBorderBrush}"
                            BorderThickness="0"
                            CornerRadius="1.75" />
                        <Border
                            x:Name="BackgroundNorm_highlight"
                            Margin="0"
                            BorderBrush="{StaticResource Office2010SilverScrollBarRepeatButtonHighlightBorderBrush}"
                            BorderThickness="0"
                            CornerRadius="1"
                            Opacity="0.65" />
                        <Border
                            x:Name="BackgroundOver"
                            Background="{StaticResource Office2010SilverScrollBarRepeatButtonHighlightBrush}"
                            BorderBrush="{StaticResource Office2010SilverScrollBarRepeatButtonHighlightBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="1.75"
                            Opacity="0" />
                        <Border
                            x:Name="BackgroundOver_Highlight"
                            Margin="0"
                            BorderBrush="{StaticResource Office2010SilverScrollBarRepeatButtonHighlightOverBorderBrush}"
                            BorderThickness="1,1,1,1"
                            CornerRadius="1"
                            Opacity="0" />
                        <Border
                            x:Name="BackgroundPressed"
                            Background="{StaticResource Office2010SilverScrollBarRepeatButtonPressedBrush}"
                            BorderBrush="{StaticResource Office2010SilverScrollBarRepeatButtonPressedBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="1.75"
                            Opacity="0" />
                        <Border
                            x:Name="BackgoundPressed_Highlight"
                            Margin="0"
                            BorderBrush="{StaticResource Office2010SilverScrollBarRepeatButtonPressedHighlightBorderBrush}"
                            BorderThickness="1,1,1,1"
                            CornerRadius="1"
                            Opacity="0" />
                        <Border
                            x:Name="DisabledVisualElement"
                            Background="#3FFFFFFF"
                            BorderBrush="#D8FFFFFF"
                            CornerRadius="1.75"
                            IsHitTestVisible="false"
                            Visibility="Collapsed" />
                        <Border
                            x:Name="FocusVisualElement"
                            Margin="-1"
                            BorderBrush="#FFE99862"
                            BorderThickness="1"
                            CornerRadius="2.75"
                            IsHitTestVisible="false"
                            Visibility="Collapsed" />
                        <Path
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Data="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}"
                            Fill="Black" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
