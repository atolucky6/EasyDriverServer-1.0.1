<dx:ThemedWindow
    x:Class="EasyDriverServer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
    xmlns:dxcore="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
    xmlns:view="clr-namespace:EasyDriverServer.View;assembly=EasyDriverServer.View"
    Title="Easy Driver Server"
    Width="1100"
    Height="700"
    Padding="0"
    ShowIcon="True"
    ShowInTaskbar="True"
    ShowTitle="False">
    <dx:ThemedWindow.ToolbarItems>
        <dxb:MainMenuControl VerticalAlignment="Center" dxb:MergingProperties.AllowMerging="True" />
    </dx:ThemedWindow.ToolbarItems>
    <view:MainView x:Name="mainView" />
</dx:ThemedWindow>
